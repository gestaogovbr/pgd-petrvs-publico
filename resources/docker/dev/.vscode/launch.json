{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9004,
            "pathMappings": {
                "/var/www": "${workspaceRoot}"
            },
            "preLaunchTask": "enable:xdebug",
            "postDebugTask": "disable:xdebug"
        },
    ]
}